<UserControl x:Class="DXApplication2.Views.Page.food"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
xmlns:dxga="http://schemas.devexpress.com/winfx/2008/xaml/gauges"
xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
         Loaded="UserControl_Loaded"    >

    <Grid Margin="20 50 20 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <StackPanel >

            
            <Grid>

                <StackPanel Orientation="Horizontal">
                    <TextBlock
    Grid.Row="1"
    HorizontalAlignment="Right"
    FontSize="32"
                        Margin="10 0 50 0"
    FontWeight="SemiBold"
    Text="Food" />
                    <Button
                        Grid.Row="1"
                        Width="200"
                        Margin="0"
                        Click="Button_Click"
                        Style="{StaticResource addButton}">
                        <StackPanel Orientation="Horizontal">

                            <TextBlock Foreground="White" Text="Add Stock" />
                            <Icon:PackIconMaterial
                                Width="11"
                                Height="11"
                                Margin="8 1 0 0"
                                VerticalAlignment="Center"
                                Kind="Plus" />
                        </StackPanel>
                    </Button>



                </StackPanel>

                
            </Grid>
            <!--Add Button-->


            <!--Seprator-->
            <Separator
                Grid.Row="3"
                Height="1"
                Margin="0 10 0 0"
                Background="#DAE2EA" />

            <StackPanel Grid.Row="4">
                <TextBlock
                    x:Name="RfStockNumbers"
                    Margin="2"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="Total Number : 0" />
               
            </StackPanel>


        </StackPanel>

        <dxga:StateIndicatorControl x:Name="trafficLightsIndicator"
                                    Grid.Row="1"
                                    Panel.ZIndex="1"
                                    Width="40"
                                    StateIndex="3"
                                    VerticalAlignment="Center"
                                    >
            <dxga:StateIndicatorControl.Model>
                <dxga:TrafficLightsStateIndicatorModel   />
            </dxga:StateIndicatorControl.Model>
        </dxga:StateIndicatorControl>

        <dxg:GridControl
            Grid.Row="1"
            Name="RfStockList"
            >
            <dxg:GridControl.Effect>
                <DropShadowEffect  Opacity="0.5" Direction="260" BlurRadius="10" ShadowDepth="3" />
            </dxg:GridControl.Effect>
            <dxg:GridControl.Columns >
                <dxg:GridColumn
                    Width="60"
                    Binding="{Binding Id}"
                    Header="Number"
                    ReadOnly="True" 
                    
                    />
                <dxg:GridColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Name of product"
                    ReadOnly="True" />
                <dxg:GridColumn
    Width="*"
    Binding="{Binding Quantity}"
    Header="Quantity"
    ReadOnly="True" />
                
                <dxg:GridColumn Width="170" FieldName="Operation">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button  Style="{StaticResource gridEditButton}">
                                    <Icon:PackIconMaterial
                                        Kind="PageNext"
                                        RotationAngle="180"
                                        Style="{StaticResource gridButtonIcon}" />
                                </Button>
                                <Button
                                    Margin="5 0 0 0"
                                    Style="{StaticResource gridEditButton}">
                                    <Icon:PackIconMaterial
                                        Kind="Printer"
                                        RotationAngle="180"
                                        Style="{StaticResource gridButtonIcon}" />
                                </Button>
                                <Button
                                    Margin="5 0 0 0"
                                    Style="{StaticResource gridEditButton}">
                                    <Icon:PackIconMaterial Kind="PencilOutline" Style="{StaticResource gridButtonIcon}" />
                                </Button>
                                <Button
                                    Margin="5 0 0 0"
                                    Style="{StaticResource gridRemoveButton}">
                                    <Icon:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>
            </dxg:GridControl.Columns>

        </dxg:GridControl>


    </Grid>
</UserControl>
